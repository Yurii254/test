function wordsToMarks(str){
  //your code here
  
 var n2 = 0;
 var arrayAbc = ["0", "a","b", "c", "d", "e", "f","g", "h", "i", "j", "k","l", "m", "n", "o", "p","q", "r", "s", "t", "u", "v", "w", "x", "y", "z"]; 
   
 if (str.length <1) {
    return 0;
   }
    
for (var i = 0; i < str.length; i++) {
  
   n2 = n2 + arrayAbc.indexOf(str[i]);
   }
 
return n2;
 
}
