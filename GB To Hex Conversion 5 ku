function rgb(r, g, b){
  let arr = new Array();
  arr = [r, g, b];
  let x = 0;
  let ihex = ''; 
  let output  = '';

  for (let i = 0; i < arr.length;  i++) {
  
    if (arr[i] <= 0) x = '0';
    
    if (arr[i] > 255) arr[i] = 255;
        
    if (arr[i] > 0) x = arr[i].toString(16);
   
    if (x.length < 2) x = '0' + x;

    ihex = ihex + x;
    }
    
  output = String(ihex).toUpperCase()
  return(output); 
  }
